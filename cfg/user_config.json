{
  "lock_failed_attempts": 5,
  "lock_duration_minutes": 10,
  "access_token_exp_minutes": 60,
  "refresh_token_exp_days": 30,
  "access_token_secret": "purecpp_access_token_secret_key",
  "refresh_token_secret": "purecpp_refresh_token_secret_key",
  "smtp_host": "smtp.qq.com",
  "smtp_port": 465,
  "smtp_user": "xxxx@qq.com",
  "smtp_password": "xxxxxxxxxx",
  "smtp_from_email": "xxxxx@qq.com",
  "smtp_from_name": "PureCpp管理员",
  "web_server_url": "http://localhost:3389",
  "default_avatar_url": "/images/avatar.png",
  "rate_limit_rules": [
    {
      "path": "/api/v1/register",
      "max_requests": 5,
      "window_seconds": 60,
      "enabled": true
    },
    {
      "path": "/api/v1/login",
      "max_requests": 10,
      "window_seconds": 60,
      "enabled": true
    },
    {
      "path": "^/api/v1/.*$",
      "max_requests": 100,
      "window_seconds": 60,
      "enabled": false,
      "comment": "匹配所有 /api/v1/ 开头的路径（自动识别为正则表达式）"
    }
  ]
}